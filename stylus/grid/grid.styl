// GRID
.grid
  vertical-align top
  border-spacing 0

  // Layout
  &.auto
    table-layout fixed

  // Vertical Alignment
  &.align-middle
    vertical-align middle
  &.align-bottom
    vertical-align bottom

  // Dimensions
  &.height-full
    height 100%

.grid-items
  display table
  table-layout inherit
  border-spacing inherit
  vertical-align inherit  
  width 100%
  height inherit

  > *:not(.grid-row)
    display table-cell
    vertical-align inherit
    height 100%

    &.max
      width 100%
    &.min
      width 0.00001px

.grid-row
  display table-row

  > *
    display table-cell
    vertical-align inherit

    &.max
      width 100%
    &.min
      width 0.00001px

  &.max
    height 100%
  &.min
    height 0.00001px